---
import pt from "../locales/pt_BR.json";
const t = pt.footer;
const year = new Date().getFullYear();
---
<footer class="w-full border-t border-[rgba(76,201,240,0.12)] bg-[var(--color-background)] text-[var(--color-text-muted)] text-sm py-6 px-4 flex flex-col md:flex-row items-center justify-between gap-4">
  <div class="flex items-center gap-2">
    <span>{t.copyright.replace('{year}', year)}</span>
  </div>
  <nav class="flex items-center gap-6 flex-wrap justify-center max-lg:flex-col max-lg:gap-2">
    {t.links.map(link => (
      <a href={link.href} class="hover:text-[var(--color-accent-blue)] transition-colors duration-150 cursor-pointer" onclick="document.querySelector(link.href)?.scrollIntoView({behavior: 'smooth'})">{link.label}</a>
    ))}
    <a href="#" class="ml-2" aria-label={t.instagram}>
      <svg class="w-5 h-5 inline-block align-middle" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><rect width="18" height="18" x="3" y="3" rx="5"/><circle cx="12" cy="12" r="4"/><circle cx="17" cy="7" r="1.5"/></svg>
    </a>
  </nav>
</footer> 
