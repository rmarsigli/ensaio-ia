---
import { Image } from 'astro:assets';

export interface Props {
  src: ImageMetadata | string;
  alt: string;
  width: number;
  height: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  fetchpriority?: 'high' | 'low' | 'auto';
  decoding?: 'sync' | 'async' | 'auto';
  quality?: number;
}

const {
  src,
  alt,
  width,
  height,
  class: className = '',
  loading = 'lazy',
  fetchpriority = 'auto',
  decoding = 'async',
  quality = 80,
} = Astro.props;
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  decoding={decoding}
  fetchpriority={fetchpriority}
  quality={quality}
  class:list={[className, "w-full h-full object-cover"]}
/>
