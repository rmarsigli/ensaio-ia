---
import pt from "../locales/pt_BR.json";
import websiteCover from "../assets/images/website-cover.webp";
import websiteCover2x from "../assets/images/website-cover@2x.webp";
import websiteCoverThumbnail from "../assets/images/website-cover-thumb.webp";
import websiteCoverThumbnail2x from "../assets/images/website-cover-thumb@2x.webp";
const t = pt.hero;
---
<section
	class="relative flex items-center justify-center min-h-screen w-full overflow-hidden px-4"
	style="background: linear-gradient(135deg, #0D0D0F 60%, #1E1E24 100%);"
>
	<div aria-hidden="true" class="absolute inset-0 pointer-events-none z-0">
		<div class="absolute -top-32 -left-32 w-[480px] h-[480px] rounded-full bg-accent-primary opacity-20 blur-3xl"></div>
		<div class="absolute bottom-0 right-0 w-[320px] h-[320px] rounded-full bg-accent-secondary opacity-20 blur-2xl"></div>
		<div class="absolute top-1/2 left-1/2 w-[120vw] h-[2px] bg-gradient-to-r from-accent-secondary via-transparent to-accent-primary opacity-10 rotate-12"></div>
	</div>

	<div class="w-full relative z-10 max-w-[1200px]">
		<div class="w-full grid lg:grid-cols-2 gap-2 lg:gap-4 max-lg:mt-12">
			<div class="flex flex-col items-center text-center max-lg:mb-4">
				<h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight bg-gradient-to-r from-accent-primary via-white to-accent-secondary bg-clip-text text-accent-primary">
					{t.headline}
				</h1>
				<p class="text-lg md:text-2xl text-text-muted mb-8">
					{t.subtitle}
				</p>
				<a
					href="#about"
					class="inline-block px-10 py-4 rounded-full font-semibold uppercase text-lg bg-accent-secondary text-slate-900 hover:text-white shadow-xl hover:bg-accent-primary transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-accent-primary focus:ring-offset-2"
					style="box-shadow: 0 0 24px var(--color-accent-pink), 0 0 48px var(--color-accent-blue);"
				>
					{t.cta}
				</a>
				<span class="mt-6 text-sm text-accent-primary font-medium opacity-80">{t.trust}</span>
			</div>
			<div class="relative flex items-center justify-center max-lg:mb-12">
				<div class="absolute top-1/3 left-0 w-[140px] p-2 bg-white shadow-lg z-10">
					<img
						src={websiteCoverThumbnail.src}
						alt={t.thumbnail_alt}
						class="w-full h-full object-cover"
						srcset={`${websiteCoverThumbnail2x.src} 2x`}
						width={140}
						height={140}
						loading="eager"
						fetchpriority="high"
					/>
					<span class="w-full text-slate-700 text-xs">
						{t.thumbnail_desc}
					</span>
				</div>
				<div class="bg-slate-50 p-4 bg-white w-3/4 shadow-lg rotate-1 rounded-xs space-y-2">
					<img
						src={websiteCover.src}
						alt={t.cover_alt}
						class="w-full h-full object-cover"
						srcset={`${websiteCover2x.src} 2x`}
						width={928}
						height={1152}
						loading="eager"
						fetchpriority="high"
					/>
					<span class="text-accent-primary font-semibold text-slate-700">
						{t.cover_desc}
					</span>
				</div>
			</div>
		</div>
	</div>
</section> 
