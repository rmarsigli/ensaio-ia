# Cache headers para otimização de performance

# Fontes - cache longo (1 ano)
/fonts/poppins/*
  Cache-Control: public, max-age=31536000, immutable

# Imagens estáticas - cache longo (1 ano)
*.webp
  Cache-Control: public, max-age=31536000, immutable

*.svg
  Cache-Control: public, max-age=31536000, immutable

*.png
  Cache-Control: public, max-age=31536000, immutable

*.jpg
  Cache-Control: public, max-age=31536000, immutable

# CSS e JS - cache médio (1 mês)
*.css
  Cache-Control: public, max-age=2592000, must-revalidate

*.js
  Cache-Control: public, max-age=2592000, must-revalidate

# HTML - cache curto (1 hora)
*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Assets do Astro - cache médio (1 mês)
/_astro/*
  Cache-Control: public, max-age=2592000, must-revalidate

# Página inicial - cache curto (1 hora)
/
  Cache-Control: public, max-age=3600, must-revalidate
